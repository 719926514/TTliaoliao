<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="photo_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 是否悬浮在activity上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 有无标题 -->
        <item name="android:windowNoTitle">false</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 灰度 -->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>


    <!--弹窗从底部进出场的平移动画-->
    <style name="animation_for_translation_pw">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>




    <!--圆角对话框样式-->
    <style name="circleDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>



    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@drawable/progress_bg_corners</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="Theme_AudioDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--//是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--/背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item><!-- dim:模糊的 阴影效果 -->
        <item name="android:indeterminateDrawable">@drawable/progress_1</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>


    <style name="def_switch_view">
        <item name="switch_bg_color">#999999</item>
        <item name="switch_ball_color">#ffffff</item>
    </style>
</resources>
