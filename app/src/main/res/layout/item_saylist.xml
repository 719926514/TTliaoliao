<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/beijing"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_timen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_whit"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:text="time"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/tv_sym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_whit"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:text="xitong"
        android:textSize="12dp"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_bieren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

<LinearLayout
    android:layout_width="44dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.work.mtmessenger.util.image.MyImage
        android:id="@+id/myiv_phot1"
        android:layout_width="44dp"
        android:layout_height="44dp" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="12dp" />
</LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_btn_whit"
                    android:padding="5dp"
                    android:textColor="@color/textmaxtile" />

                <com.work.mtmessenger.util.image.MyImage
                    android:id="@+id/iv_icn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone"/>

                <View
                    android:id="@+id/id_recorder_anim"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/adj1"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/id_recorder_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@id/id_recorder_anim"
                    android:textColor="#ff777777" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ziji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <com.work.mtmessenger.util.image.MyImage
                android:id="@+id/iv_icn2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/id_recorder_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/id_recorder_anim1"
                android:textColor="#ff777777" />

            <View
                android:id="@+id/id_recorder_anim1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:background="@drawable/adj"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_btn_gren"
                android:padding="5dp"
                android:textColor="@color/textmaxtile" />


        </LinearLayout>

        <com.work.mtmessenger.util.image.MyImage
            android:id="@+id/myiv_phot2"
            android:layout_width="44dp"
            android:layout_height="44dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>